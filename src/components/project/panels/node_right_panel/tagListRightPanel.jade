div
  .tag-list
    .tag-list__item(ng-repeat="tag in items" ng-class="{'tag-list__item-wide': sections.isWide}")
      .tooltip-positioner(tooltip-placement="right" tooltip-append-to-body="true" tooltip-is-open="openTooltip")
      .cat-info
      .cat-list.tag-cloud
        .cat-item(style="cursor:pointer", ng-mouseover="onSectionHover(section, tag)", ng-mouseleave="onSectionLeave()", ng-click="onSectionSelect(section, tag)")
          .cat-highlight(style="opacity: 0;")
          .cat-text-container
            div.cat-text.no-margin.truncate
              {{tag}}
  .pagination(ng-if="tagsLength > maxItemsToShow")
    span.pagination__button(ng-click="showLess()", ng-disabled="!(numShowGroups !== 0)", ng-class="{'disabled': !(numShowGroups !== 0)}") &larr; Less
    span.pagination__total  {{startItem()}} - {{numShownCats}} of {{tagsLength}}
    span.pagination__button(ng-click="showMore()"
      ng-disabled="!(numShownCats < tagsLength)"
			ng-class="{ 'disabled': !(numShownCats < tagsLength)}"
    ) More &rarr;
