.pull-right.attr-visibility
	div(ng-if="!attr_mod.visible" uib-tooltip="Show Attribute" tooltip-placement="left" tooltip-append-to-body="true" ng-click="attr_mod.toggleVisibility(); setAttrDirty(attr_mod);")
