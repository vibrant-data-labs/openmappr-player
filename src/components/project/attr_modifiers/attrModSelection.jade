		span.uib-dropdown-toggle.text-muted(uib-dropdown-toggle uib-tooltip="Options", tooltip-placement="top", tooltip-append-to-body="true")
			i.fa.fa-caret-down
		.uib-dropdown-menu.uib-dropdown-menu-right.uib-dropdown-menu-flexing.pull-right(uib-dropdown-menu)
			.uib-dropdown-click-close
			.uib-dropdown-flex-content
				.uib-dropdown-flex
					ul.list-unstyled.dd-list.nowrap(ng-mouseleave="status.isOpen = false;")
