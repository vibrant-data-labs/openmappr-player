.filter-header.filter-header--nodes
  .node-search(ng-class="{'node-search--opened': showSearch}")
    input.node-search__input(type="text" ng-model="nodeSearchQuery" ng-model-options="{debounce: 300}" placeholder="search nodes...")
    button.node-search__btn.node-search__btn--open(ng-click="showSearch = true" uib-tooltip="Search nodes" tooltip-append-to-body="true")
    button.node-search__btn.node-search__btn--close(ng-click="showSearch = false; nodeSearchQuery = '';")
  dir-sort-menu(sort-types="selInfo.sortTypes" sort-config="selInfo.sortInfo")
  .button
    i.fa.fa-download 
#info-panel-scroll.panel-scroll.flex-fill.flex-vert-container
  dir-nodes-list(nodes="selInfo.genericSelNodes", links="selInfo.genericSelLinks" selected-groups="selInfo.selectedGroups", label-attr="selInfo.labelAttr" node-color-attr="selInfo.nodeColorAttr" node-color-attr-title="selInfo.nodeColorAttrTitle" panel-mode="selInfo.panelMode" sort-types="selInfo.sortTypes" sort-info="selInfo.sortInfo"  search-query="nodeSearchQuery")
  dir-neighbor-nodes(ng-if="selInfo.panelMode == 'node' " sel-node="selInfo.principalNode" panel-mode="selInfo.panelMode" label-attr="selInfo.labelAttr" sel-nodes="selInfo.genericSelNodes" node-neighbors="selInfo.nodeNeighbors" link-info-attrs="selInfo.linkInfoAttrs")
  dir-node-info-attrs(ng-if="selInfo.panelMode == 'node' && ui.showInfoAttrs " sel-node="selInfo.principalNode" pinned-media="pinnedMedia")
